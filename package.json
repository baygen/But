{
  "name": "buttons",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "watch": "npm-watch bundle",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "lint": " ./node_modules/.bin/eslint --no-ignore ./src/**/*.js ",
    "lint-fix": " ./node_modules/.bin/eslint --no-ignore ./src/**/*.js --fix",
